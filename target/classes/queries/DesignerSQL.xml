	<select id="selectRequestBoardBySeq" parameterType="com.opendesign.vo.SearchVO" resultType="com.opendesign.vo.RequestBoardVO" > 
		<include refid="sql_selectDesignRequestBoardList" />
		<![CDATA[
		WHERE T.seq = #{schSeq}
		]]>
	</select>
	
