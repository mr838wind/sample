		]]>
	</select>
	
	<!-- 디자인 작품 오픈 소스 -->
	<select id="selectDesignWorkFileList" parameterType="hashmap" resultType="com.opendesign.vo.DesignWorkFileVO" > 
		<![CDATA[
		SELECT
		        T.seq
		        ,T.design_work_seq
		        ,T.comments
