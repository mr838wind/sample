		        ,T.register_time
		    FROM
		        t_design_work_file T
		    WHERE
		        T.design_work_seq = #{designWorkSeq}
		    ORDER BY
		        T.seq
		]]>
	</select>
	
	<!-- 작품 구매 -->
	<insert id="insertOrder" parameterType="com.opendesign.vo.OrderVO" useGeneratedKeys="true" keyProperty="seq" >
	 	<![CDATA[
		INSERT
		    INTO
		        t_order(
		            design_work_seq
		            ,point
		            ,delivery_info
		            ,status
		            ,member_seq
		            ,register_time
		        )
		    VALUES
		        (
		            #{designWorkSeq}
		            ,#{point}
		            ,#{deliveryInfo}
		            ,#{status}
		            ,#{memberSeq}
		            ,#{registerTime}
		        )
	 	]]>
	</insert>
	
	<!-- 포인트 가감이력 -->
	<insert id="insertPointHistory" parameterType="com.opendesign.vo.PointHistoryVO" useGeneratedKeys="true" keyProperty="seq" >
	 	<![CDATA[
		INSERT
		    INTO
		        t_point_history(
		            sign
		            ,amount
		            ,accum_amount
		            ,register_time
		            ,member_seq
		            ,order_seq
		            ,comments
		        )
		    VALUES
		        (
		            #{sign}
		            ,#{amount}
		            ,#{accumAmount}
